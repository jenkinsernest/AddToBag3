<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
     android:id="@+id/card"
    app:cardElevation="2dp"

   >
    <LinearLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/primage"
            android:layout_width="150dp"
            android:src="@drawable/emtrim"
            android:layout_height="120dp"/>
        <TextView
            android:id="@+id/product_name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#111"
            android:layout_margin="2dp"
            android:text="Folic Acid (100)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="2dp"
            android:id="@+id/product_name_sub"
            android:textSize="13sp"
            android:textColor="#111"
            android:text="Folic Acid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/product_spec"
            android:layout_margin="2dp"
            android:textSize="13sp"
            android:textColor="#111"
            android:text="Tablet - 5mg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtprprice"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="\u20A6200"
            android:padding="3dp"
            android:background="@drawable/botton"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>